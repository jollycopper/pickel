<header class="navbar navbar-default navbar-inverse">
  <div class="container">
    <%= link_to "Pickel", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to(root_path) do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
          <% end %></li>
        <li><%= link_to(help_path) do %>
              <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span> Help
          <% end %></li>
        <% if logged_in? %>
            <li><%= link_to(search_path) do %>
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
            <% end %></li>
            <li>
              <%= link_to('/cart') do %>
                  <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Cart
              <% end %>
            </li>
            <% if current_user.admin? %>
                <li>
                  <%= link_to('/courses') do %>
                      <span class="glyphicon glyphicon-console" aria-hidden="true"></span> Admin
                  <% end %>
                </li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to(current_user) do %>
                      <span class="glyphicon glyphicon-bookmark" aria-hidden="true"></span> History
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to(logout_path, method: :delete) do %>
                      <span class="glyphicon glyphicon-off" aria-hidden="true"></span> Log out
                  <% end %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>